<section class="section-article">
    <span itemscope="" itemtype="http://schema.org/Article">
        <meta itemprop="name" content="<%- post.title %>">
        <meta itemprop="url" content="<%- post.permalink %>">
        <% if (post.has_thumb) { %>
        <meta itemprop="image" content="/<%= post.path %>thumb.png">
        <% } %>
        <meta itemprop="author" content="<%- site.url %>">
        <meta itemprop="description" content="<%- post.excerpt %>">
        <meta itemprop="datePublished" content="<%- moment(post.date).format() %>">
    </span>

    <article class="post-card <%- post.has_full_thumb ? 'card-with-image' : '' %> <%- post.color ? post.color : '' %>"
             id="post-<%- post._id %>"
             itemscope="itemscope"
             itemtype="http://schema.org/BlogPosting"
             itemprop="blogPost">

        <div class="card-body">

            <header class="card-header" itemprop="image">
                <h3 class="card-title" itemprop="headline"><%= post.title %>&nbsp;</h3>

                <span class="card-icon">
                    <i class="fa fa-<%- post.icon === undefined ? 'pencil' : post.icon %>"></i>
                </span>

                <% if (post.has_full_thumb) { %>
                <img src="/<%= post.path %>thumb-full.png"
                     alt="<%= post.title %>"
                     class="card-image">
                <% } %>
            </header>

            <div class="card-text" itemprop="text">
                <%- post.content %>

                <% if (post.src !== undefined && post.src !== null && post.src.length != 0) { %>
                <div class="sources">
                    <h6><%- __("Article sources") %></h6>
                    <ul>
                        <% for(var srcObj in post.src) { %>
                        <% for(var srcTitle in post.src[srcObj]) { %>
                        <li>
                            <a href="<%- post.src[srcObj][srcTitle] %>" title="<%- srcTitle %>"><%- srcTitle %></a>
                            <span>ØŒ</span>
                        </li>
                        <% } %>
                        <% } %>
                    </ul>
                </div>
                <% } %>
            </div>

            <footer class="card-footer">
                <ul class="card-meta">
                    <li class="post-date">
                        <i class="fa fa-calendar"></i>
                        <time datetime="<%- post.date %>" itemprop="datePublished">
                            <%- __('at') %>
                            <%- ToPersianDigit(jmoment(post.date).format('dddd jDo jMMMM, jYYYY')) %>
                        </time>
                    </li>

                    <% if (post.categories.length > 0) { %>
                    <li class="post-categories">
                        <i class="fa fa-folder"></i>
                        <%- list_categories(post.categories, {
                            show_count: false,
                            class: 'post-category',
                            style: 'none',
                            separator: ', '
                        }) %>
                    </li>
                    <% } %>

                    <% if (post.tags.length > 0) { %>
                    <li class="post-categories">
                        <i class="fa fa-tag"></i>
                        <%- list_tags(post.tags, {
                            show_count: false,
                            class: 'post-category',
                            style: 'none',
                            separator: ', '
                        }) %>
                    </li>
                    <% } %>
                </ul>
            </footer>

        </div>
    </article>

    <div class="post-card <%- post.color ? post.color : '' %>">
        <div class="card-body">
            <div class="card-header">
                <h3 class="card-title" itemprop="headline"><%- __("Comments") %></h3>
                <span class="card-icon">
                    <i class="fa fa-comments"></i>
                </span>
            </div>
            <div class="card-text">
                <div id="disqus_thread"></div>
            </div>
        </div>
        <script>
            var disqus_config = function () {
                this.page.url = "http://masud.afsar.info<%= post.permalink %>";  // Replace PAGE_URL with your page's canonical URL variable
                this.page.identifier = "<%= post._id %>"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
            };

            (function() { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');
                s.src = 'https://masudafsar.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
</section>